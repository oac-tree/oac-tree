<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>sequencer</artifactId>
    <packaging>codac</packaging>
    <version>1.2.0</version>
    <name>SUP sequencer module</name>
    <description>The engine for the SUP sequencer</description>
    <url>http://www.iter.org/</url>

    <!-- project properties -->
    <properties>
        <unit.type>module</unit.type>
        <integrity.level>1</integrity.level>
        <pluginpath>lib/plugins</pluginpath>
        <cppcheck.args>--enable=all --suppress=missingInclude --inline-suppr</cppcheck.args>
        <sonar.exclusions>src/main/c++/cli/main.cpp, src/main/c++/daemon/main.cpp, src/main/c++/base/Log.cpp, src/test/**</sonar.exclusions>
    </properties>

    <!-- parent pom.xml -->
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>7.1.0</version>
    </parent>

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>vanherw</id>
            <name>Walter Van Herck</name>
            <organization>ITER Organisation</organization>
            <email>walter.vanherck@iter.org</email>
            <roles>
                <role>unit owner</role>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>bauvirb</id>
            <name>Bertrand Bauvir</name>
            <organization>ITER Organisation</organization>
            <email>bertrand.bauvir@iter.org</email>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>ferrog</id>
            <name>Giuseppe Ferro</name>
            <organization>ITER Organisation</organization>
            <email>giuseppe.ferro@iter.org</email>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <init>
                        <expand source="-" file="main/VERSION">
                            <![CDATA[${project.version}]]>
                        </expand>
                        <expand source="ld.so.conf" file="main/codac-${project.artifactId}.conf"
                                rpmeval="true" mvneval="true" />
                    </init>
                    <packaging>
                        <package>
                            <!-- Libraries -->
                            <include type="file" source="lib" target="lib">
                                <include>*.so.*</include>
                            </include>
                            <!-- Plugins -->
                            <!-- <include type="file" source="lib/plugins" target="lib/plugins">
                                <include>*.so*</include>
                            </include> -->
                            <include type="config" source="main/codac-${project.artifactId}.conf"
                                     target="ld.so.conf.d/codac-${project.artifactId}.conf"
                                     altpath="%{_sysconfdir}/ld.so.conf.d/codac-${project.artifactId}.conf" />
                            <!-- Programs -->
                            <include type="file" source="bin" target="bin">
                                <include>sequencer-cli</include>
                                <include>sequencer-daemon</include>
                            </include>
                            <!-- Package dependencies -->
                            <requires version="current">libxml2</requires>
                            <requires codac="true">cpp-common</requires>
                            <requires version="current" buildOnly="true">cmake3</requires>
                            <requires version="current" buildOnly="true">libxml2-devel</requires>
                            <requires codac="true" buildOnly="true">cpp-common-devel</requires>
                            <!-- RPM scriptlet -->
                            <scriptlet type="posttrans">
                                <![CDATA[ ldconfig ]]>
                            </scriptlet>
                        </package>
                        <package name="devel">
                            <!-- Libraries -->
                            <include type="file" source="lib" target="lib">
                                <include>*.a</include>
                                <include>*.so</include>
                            </include>
                            <!-- Public API headers -->
                            <include type="file" source="include" target="include/sup">
                                <include>*.h</include>
                            </include>
                            <!-- Package dependencies -->
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}</requires>
                        </package>
                        <package name="tests">
                            <!-- Unit Test -->
                            <include type="file" source="bin/unit-tests" target="tests/${project.artifactId}/unit-tests"/>
                            <!-- Package dependencies -->
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}-devel</requires>
                            <requires version="current" buildOnly="true">gtest-devel</requires>
                            <requires version="current" buildOnly="true">gmock-devel</requires>
                        </package>
                    </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
