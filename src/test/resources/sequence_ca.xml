<?xml version="1.0" encoding="UTF-8"?>
<Procedure xmlns="http://codac.iter.org/sup/sequencer" version="1.0"
           name="Trivial procedure for testing purposes"
           xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
           xs:schemaLocation="http://codac.iter.org/sup/sequencer sequencer.xsd">
    <Root>
        <!-- Write as string requires extra quotes as per JSON -->
        <BlockingCAWriteNode name="put-client"
            channel="SEQ-TEST:BOOL"
            datatype="{&quot;type&quot;:&quot;string&quot;}"
            instance="&quot;TRUE&quot;"/>
        <BlockingCAWriteNode name="put-client"
            channel="SEQ-TEST:FLOAT"
            datatype="{&quot;type&quot;:&quot;string&quot;}"
            instance="&quot;0.5&quot;"/>
        <BlockingCAWriteNode name="put-client"
            channel="SEQ-TEST:STRING"
            datatype="{&quot;type&quot;:&quot;string&quot;}"
            instance="&quot;{&quot;value&quot;:0}&quot;"/>
        <!-- Read/Write workspace variable -->
        <BlockingCAWriteNode name="put-client"
            channel="SEQ-TEST:FLOAT"
            variable="to-write"/>
        <BlockingCAFetchNode name="get-client"
            channel="SEQ-TEST:FLOAT"
            variable="to-fetch"/>
    </Root>
    <Workspace>
        <Local name="to-write"
               type="{&quot;type&quot;:&quot;float32&quot;}"
               value="-1.1"/>
        <!-- ToDo - Re-assess need to provide default value -->
        <Local name="to-fetch"
               type="{&quot;type&quot;:&quot;float32&quot;}"
               value="0.0"/>
    </Workspace>
</Procedure>
